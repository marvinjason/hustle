            <h2>Add Job</h2>
            	<%= form_for @job do |f| %>
            		<div class="form-group">
            			<div class="row">
            				<%= f.label :name, 'Job Title' %><br>
            				<div class="col-lg-6">
            					<%= f.text_field :name, class: 'form-control' %>
            					<p class="help-block">Make a fun title for your job!</p>
            				</div>
            			</div>
            			<div class="row">
            				<%= f.label :description, 'Job Description' %><br>
            				<div class="col-lg-6">
            					<%= f.text_area :description, class: 'form-control', rows: 3 %>
            					<p class="help-block">Add a little more info for your job!</p>
            				</div>
            			</div>
            			<div class="row">
            				<%= f.label :weight %><br>
            				<div class="col-lg-6">
            					<%= f.number_field :weight, class: 'form-control' %>
            					<p class="help-block">How important is this job? (1-10)</p>
            				</div>
            			</div>
            			<div class="row">
            				<%= f.submit 'Submit', class: 'btn btn-lg btn-success' %>
            			</div>
            		</div>
                <% end %>
